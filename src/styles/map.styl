
#wrapper
	width 100vw
	height 100vh
	display flex
	flex-direction row

#map
	width 75vw
	height 100vh
	order 1

#menu
	width 25vw
	height 100vh
	background white
	order 2

	ul
		overflow scroll
		width 100%
		height 95%
		margin 0
		padding 0

		li
			width 100%
			height 60px
			border 1px solid gray
			list-style none
			padding-left 40px
			font-size 20px
			&:hover
				background blue
				color white
				border-color white

			span
				width 100%
				height 40px
				display block
				padding-top 20px
				cursor pointer

	input
		width 100%
		height 5%
		padding 10px
		font-size 20px
