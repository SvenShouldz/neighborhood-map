#wiki
	width 90vw
	order 2
	position fixed
	background white
	z-index 1000
	display flex
	flex-direction column
	opacity 0
	transition opacity 0.5s
	border-radius 6px
	left 50%
	margin-left -45vw
	top 10vh
	box-shadow 10px 10px 40px 0px rgba(0,0,0,0.26)
	@media screen and (min-width: 760px)
		width 65vw
		top inherit
		left 5vw
		margin-left inherit
		bottom 50px
		flex-direction row
		order 0
	#img
		width  100%
		min-height 450px
		background-repeat no-repeat
		background-size cover
		background-position center center
		opacity 0
		border-radius 6px 0px 0px 6px
		@media screen and (min-width: 760px)
			width  25%
			min-height 100px

	#text
		width 100%
		height 100%
		opacity 0
		@media screen and (min-width: 760px)
			width 75%
		h1
			font-size 64px
			padding-left 30px
			@media screen and (min-width: 760px)
				font-size 32px
		p
			margin 0
			padding 0 30px 30px 60px
			font-family sans-serif
			font-size 32px
			letter-spacing 0.5px
			@media screen and (min-width: 760px)
				font-size 18px
				padding 0 30px 30px 30px
		a
			font-family sans-serif
			font-size 18px
			text-decoration none
			display block
			padding-left 60px
			padding-bottom 20px
			color black
			&:hover
				text-decoration underline
			@media screen and (min-width: 760px)
				padding-left 30px
		#closeWindow
			cursor pointer
			width 60px
			height 60px
			position absolute
			padding 20px
			right 0
			top 0
			@media screen and (min-width: 760px)
				width 20px
				height 20px
			.svg{
				fill:black;
			}
