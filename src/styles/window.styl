#wiki
	width 65vw
	order 0
	position fixed
	background white
	z-index 1000
	left 5vw
	bottom 50px
	display flex
	flex-direction row
	opacity 0
	transition opacity 0.5s
	border-radius 6px
	#img
		width  25%
		min-height 100px
		background-repeat no-repeat
		background-size cover
		background-position center center
		opacity 0
		border-radius 6px 0px 0px 6px
	#text
		width 75%
		height 100%
		opacity 0
		h1
			font-size 32px
			padding-left 30px
		p
			margin 0
			padding 0 30px 30px 30px
			font-family sans-serif
			font-size 18px
		a
			font-family sans-serif
			font-size 18px
			text-decoration none
			display block
			padding-left 30px
			padding-bottom 20px
			color black
			&:hover
				text-decoration underline
		#closeWindow
			cursor pointer
			width 20px
			height 20px
			position absolute
			padding 20px
			right 0
			top 0
			.svg{
				fill:black;
			}
