#wiki
	width 90vw
	order 2
	position fixed
	background white
	z-index 1000
	display flex
	flex-direction column
	opacity 0
	transition opacity 0.5s
	border-radius 6px
	left 50%
	margin-left -45vw
	top 10vh
	box-shadow 10px 10px 40px 0px rgba(0,0,0,0.26)
	@media screen and (min-width: 760px)
		width 45vw
		top 3vh
	@media screen and (min-width: 1020px)
		width 65vw
		top inherit
		left 5vw
		flex-direction row
		margin-left inherit
		bottom 50px
		order 0
	#img
		width  100%
		min-height 450px
		background-repeat no-repeat
		background-size cover
		background-position center center
		opacity 0
		border-radius 6px 6px 0px 0px
		display none
		@media screen and (min-width: 760px)
			border-radius 6px 6px 0px 0px
			display block
		@media screen and (min-width: 1020px)
			width  50%
			border-radius 6px 0px 0px 6px
			min-height 100px
			display block

	#text
		height 90%
		opacity 0
		overflow hidden
		@media screen and (min-width: 1020px)
			width 75%
		h1
			font-size 28px
			padding-left 30px
			@media screen and (min-width: 760px)
				font-size 32px
		p
			max-width 100%
			margin 0
			padding 0 30px 50px 60px
			font-family sans-serif
			letter-spacing 0.5px
			@media screen and (min-width: 760px)
				padding 0 30px 50px 30px
		a
			position absolute
			font-family sans-serif
			font-size 18px
			text-decoration none
			display block
			padding-left 60px
			padding-bottom 20px
			bottom:0;
			color black
			&:hover
				text-decoration underline
			@media screen and (min-width: 760px)
				padding-left 30px
		#closeWindow
			cursor pointer
			width 30px
			height 30px
			position absolute
			padding 20px
			right 0
			top 0
			@media screen and (min-width: 760px)
				width 20px
				height 20px
			.svg{
				fill:grey;
			}
