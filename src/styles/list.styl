#menu
	width 25vw
	height 100vh
	background white
	order 2

	ul
		overflow scroll
		width 100%
		height 95%
		margin 0
		padding 0

		li
			width 100%
			height 60px
			list-style none
			padding-left 40px
			font-size 20px
			&:nth-child(2n)
				background lightgrey
			&:hover
				background blue
				color white

			span
				width 100%
				height 40px
				display block
				padding-top 20px
				cursor pointer

	input
		width 100%
		height 5%
		padding 10px
		font-size 20px
